{
  "name": "imdhemy/elasticsearch-sugar",
  "description": "The Elasticsearch PHP wrapper which makes ES sweeter for PHP developers.",
  "keywords": [
    "search",
    "client",
    "elasticsearch",
    "php"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "imdhemy",
      "email": "imdhemy@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Imdhemy\\EsSugar\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Imdhemy\\EsSugar\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "psalm": "vendor/bin/psalm --show-info=true",
    "test": "vendor/bin/phpunit --testdox",
    "env": "./bin/env.sh",
    "post-install-cmd": [
      "@env"
    ]
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "elasticsearch/elasticsearch": "^8.4",
    "laravel/helpers": "^1.5"
  },
  "require-dev": {
    "fakerphp/faker": "^1.15",
    "friendsofphp/php-cs-fixer": "^3.11",
    "imdhemy/es-testing-utils": "^8.0",
    "phpunit/phpunit": "^9.5",
    "psalm/plugin-phpunit": "^0.17.0",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^5.3",
    "vimeo/psalm": "^4.27"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {},
    "platform": {
      "php": "8.1.0"
    }
  }
}
