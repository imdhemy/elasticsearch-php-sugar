{
    "name": "imdhemy/elasticsearch-php-sugar",
    "description": "The Elasticsearch PHP wrapper which makes ES sweeter for PHP developers.",
    "keywords": ["search", "client", "elasticsearch", "php"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "imdhemy",
            "email": "imdhemy@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Imdhemy\\EsSugar\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\" : "tests/"
        }
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "elasticsearch/elasticsearch": "^7.14"
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
